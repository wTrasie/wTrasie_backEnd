{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "article",
        "service"
      ],
      "default": "article",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 160,
      "minLength": 1
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "lead": {
      "type": "component",
      "repeatable": false,
      "component": "content-parts.lead",
      "required": true
    },
    "contentparts": {
      "type": "dynamiczone",
      "components": [
        "content-parts.txt",
        "content-parts.media",
        "content-parts.quote"
      ],
      "required": true
    },
    "views": {
      "type": "component",
      "repeatable": false,
      "component": "stats.views",
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "articles"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "required": true,
      "component": "others.seo"
    }
  }
}
